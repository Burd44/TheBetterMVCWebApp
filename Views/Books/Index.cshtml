@model IEnumerable<Books>
@{
    ViewData["Title"] = "Books";
}

<h1>Index</h1>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary text-white">    
                Book List
            </h2>
        </div>  
        <div class="col-6 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-arrow-right-square"></i> Add new book
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Author
            </th>
            <th>
                Description
            </th>
            <th>
                Release year
            </th>
            <th> 
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.Author
                </td>
                <td width="50%">
                    @obj.Description
                </td>
                <td width="10%">
                    @obj.Release_Year
                </td>
                <td width="10%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Books" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i> Edit</a>
                    </div>
                    <br />
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-eraser"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

